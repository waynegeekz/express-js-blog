<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <title>Blog Website</title>
</head>
<body>
    <section class="container">
       <h1 class="mb-4">Blog Articles</h1>
       <a href="/articles/add" class="btn btn-success mb-4">Add an Article</a>
    
        <table class="table table-dark">
            <thead>
                <tr>
                    <td scope="col">Title</td> 
                    <td scope="col">Date Created</td>
                    <td scope="col">Description</td>
                    <td scope="col">Actions</td>
                </tr>
            </thead>
            <tbody>
            <% articles.forEach(article => { %>
                <tr>
                    <td scope="row"><%= article.title %></td>
                    <td class="text-muted"><%= article.created.toLocaleDateString() %></td>
                    <td><%= article.description %></td>
                    <td>
                        <a href="articles/view/<% article.id %>" class="btn btn-primary">View</a>
                        <a href="articles/edit/<% article.id %>" class="btn btn-secondary">Edit</a>
                    </td>
                </tr>
            <% }) %>
            </tbody>        
        </table>

    </section>

</body>
</html>